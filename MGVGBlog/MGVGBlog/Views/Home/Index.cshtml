@using MGVGBlog.Models
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @foreach (var text in ViewBag.lastPosts)
    {
        <div class="col-md-4">
            <h2>@text.Title</h2>
            <div>
                Posted on <i>@text.Date.ToString("dd MMM yyyy")</i>
                by: <i>@text.Author.UserName</i>
            </div>
            <br />
            <p>
                @MGVGBlog.Classes.Utils.CutText(text.Body, 200)
                <a href="/Posts/Details/@text.Id">Read more</a>
            </p>
        </div>
    }
</div>