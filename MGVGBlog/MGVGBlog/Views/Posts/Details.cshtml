@using MGVGBlog.Models
@model MGVGBlog.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <h1>
                @Html.DisplayFor(model => model.Title)
            </h1>
        </dd>
        <dd>
            <i>
                Posted on:
                @Html.DisplayFor(model => model.Date)
            </i>
            <br />
        </dd>
        
        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dd>
            <i>
                <br />
                with regards:
                <a href="/ApplicationUsers/Details/@Html.ValueForModel(Model.Author.Id)">@Html.DisplayFor(model => model.Author.UserName)</a>
            </i>
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dd>
            @*<h3>
                <span>
                    @Html.ActionLink("New Comment", "Create", "Comments")
                </span>
            </h3>*@

            <h4>Leave a Comment:</h4>
            @*<form role="form">
                <div class="form-group">
                    <textarea class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>*@
            @using (Html.BeginForm("Create", "Comments"))
            {
                @Html.AntiForgeryToken()
                <textarea class="form-control" rows="3" required name="Text"></textarea>
                <br/>
                @*<input type="text" name="Text"/>*@
                <button type="submit" class="btn btn-success">Submit</button>
            }
            <br><br>
            <p><span class="badge">@ViewBag.commentsCount</span> Comments:</p>
            <div class="border">
                @foreach (var comment in ViewBag.comments)
                {

                    <div class="comment-meta">
                        @if (comment != null)
                        {
                            <p>
                                <a href="/ApplicationUsers/Details/@comment.Author.Id">@comment.Author.UserName</a>
                            </p>
                            <p>@comment.Text</p>
                            <a href="Oshte ne e gotovo" class="glyphicon glyphicon-thumbs-up"></a>
                            <a href="Oshte ne e gotovo" class="glyphicon glyphicon-thumbs-down"></a>
                            <span class="date">
                                <span class="glyphicon glyphicon-time"></span>
                                <small>@comment.Date</small>
                            </span>
                        }
                    </div>
                    <hr />
                }
            </div>
        </dd>
    </dl>
</div>
<p>
    @if (Model.Author.UserName == User.Identity.Name || User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    |
    @Html.ActionLink("Back to List", "Index") |
    <a href="/Comments/Create">Comment</a>
</p>
